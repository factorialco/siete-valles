<%= render 'shared/header', header_title: 'Dashboard' %>
<div class="max-w-7xl mx-auto p-4 sm:px-6 md:px-8">
  <dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
    <%= render partial: 'shared/card', locals: {
      title: 'Achievements',
      subtitle: @total_achievements,
      view_link: achievements_url,
      view_text: 'View all'
    } %>
    <%= render partial: 'shared/card', locals: {
      title: 'Activities',
      subtitle: @total_activities,
      view_link: activities_url,
      view_text: 'View all'
    } %>
    <%= render partial: 'shared/card', locals: {
      title: 'Users',
      subtitle: @total_receivers,
      view_link: receivers_url,
      view_text: 'View all'
    } %>
  </dl>
</div>
